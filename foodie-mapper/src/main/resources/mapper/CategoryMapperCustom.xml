<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.foodie.mapper.CategoryMapperCustom">

    <resultMap id="VoResultMap" type="com.foodie.pojo.vo.CategoryVO">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name"/>
        <result column="type" property="type"/>
        <result column="fatherId" property="fatherId"/>
        <!--
          collenction 标签:用于定义关联的List集合类型的封装
          propertu: 对应三级分类的List属性名
          ofType:集合的类型, 三级分类的VO
        -->
        <collection property="subCatList" ofType="com.foodie.pojo.vo.SubCategoryVO">
            <id column="id" property="subId" jdbcType="INTEGER"/>
            <result column="name" property="subName"/>
            <result column="type" property="subType"/>
            <result column="fatherId" property="subFatherId"/>
        </collection>
    </resultMap>

    <select id="getSubCatList" parameterType="int" resultMap="VoResultMap">
         SELECT
            f.id as id,
            f.`name` as `name`,
            f.type as type,
            f.father_id as fatherId,
            c.id as subId,
            c.`name` as subName,
            c.type as subType,
            c.father_id as subFatherId
        FROM
            category f
        LEFT JOIN
            category c
        on
            f.id = c.father_id
        WHERE
            f.father_id = #{rootCatId}
    </select>


</mapper>