<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.foodie.mapper.CarouselDao">

    <resultMap id="BaseResultMap" type="com.foodie.pojo.Carousel">
        <!--@Table carousel-->
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="imageUrl" column="image_url" jdbcType="VARCHAR"/>
        <result property="backgroundColor" column="background_color" jdbcType="VARCHAR"/>
        <result property="itemId" column="item_id" jdbcType="VARCHAR"/>
        <result property="catId" column="cat_id" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
        <result property="sort" column="sort" jdbcType="INTEGER"/>
        <result property="isShow" column="is_show" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, image_url, background_color, item_id, cat_id, type, sort, is_show, create_time, update_time
        from  carousel
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, image_url, background_color, item_id, cat_id, type, sort, is_show, create_time, update_time
        from  carousel
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, image_url, background_color, item_id, cat_id, type, sort, is_show, create_time, update_time
        from  carousel
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="imageUrl != null and imageUrl != ''">
                and image_url = #{imageUrl}
            </if>
            <if test="backgroundColor != null and backgroundColor != ''">
                and background_color = #{backgroundColor}
            </if>
            <if test="itemId != null and itemId != ''">
                and item_id = #{itemId}
            </if>
            <if test="catId != null and catId != ''">
                and cat_id = #{catId}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="sort != null">
                and sort = #{sort}
            </if>
            <if test="isShow != null">
                and is_show = #{isShow}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into  carousel(image_url, background_color, item_id, cat_id, type, sort, is_show, create_time, update_time)
        values (#{imageUrl}, #{backgroundColor}, #{itemId}, #{catId}, #{type}, #{sort}, #{isShow}, #{createTime}, #{updateTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update  carousel
        <set>
            <if test="imageUrl != null and imageUrl != ''">
                image_url = #{imageUrl},
            </if>
            <if test="backgroundColor != null and backgroundColor != ''">
                background_color = #{backgroundColor},
            </if>
            <if test="itemId != null and itemId != ''">
                item_id = #{itemId},
            </if>
            <if test="catId != null and catId != ''">
                cat_id = #{catId},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
            <if test="isShow != null">
                is_show = #{isShow},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from  carousel where id = #{id}
    </delete>

</mapper>