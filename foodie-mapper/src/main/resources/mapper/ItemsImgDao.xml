<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.foodie.mapper.ItemsImgDao">

    <resultMap id="BaseResultMap" type="com.foodie.pojo.ItemsImg">
        <!--@Table items_img-->
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="itemId" column="item_id" jdbcType="VARCHAR"/>
        <result property="url" column="url" jdbcType="VARCHAR"/>
        <result property="sort" column="sort" jdbcType="INTEGER"/>
        <result property="isMain" column="is_main" jdbcType="INTEGER"/>
        <result property="createdTime" column="created_time" jdbcType="TIMESTAMP"/>
        <result property="updatedTime" column="updated_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, item_id, url, sort, is_main, created_time, updated_time
        from  items_img
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, item_id, url, sort, is_main, created_time, updated_time
        from  items_img
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, item_id, url, sort, is_main, created_time, updated_time
        from  items_img
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="itemId != null and itemId != ''">
                and item_id = #{itemId}
            </if>
            <if test="url != null and url != ''">
                and url = #{url}
            </if>
            <if test="sort != null">
                and sort = #{sort}
            </if>
            <if test="isMain != null">
                and is_main = #{isMain}
            </if>
            <if test="createdTime != null">
                and created_time = #{createdTime}
            </if>
            <if test="updatedTime != null">
                and updated_time = #{updatedTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into  items_img(item_id, url, sort, is_main, created_time, updated_time)
        values (#{itemId}, #{url}, #{sort}, #{isMain}, #{createdTime}, #{updatedTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update  items_img
        <set>
            <if test="itemId != null and itemId != ''">
                item_id = #{itemId},
            </if>
            <if test="url != null and url != ''">
                url = #{url},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
            <if test="isMain != null">
                is_main = #{isMain},
            </if>
            <if test="createdTime != null">
                created_time = #{createdTime},
            </if>
            <if test="updatedTime != null">
                updated_time = #{updatedTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from  items_img where id = #{id}
    </delete>

</mapper>