<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.foodie.mapper.CategoryDao">

    <resultMap id="BaseResultMap" type="com.foodie.pojo.Category">
        <!--@Table category-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
        <result property="fatherId" column="father_id" jdbcType="INTEGER"/>
        <result property="logo" column="logo" jdbcType="VARCHAR"/>
        <result property="slogan" column="slogan" jdbcType="VARCHAR"/>
        <result property="catImage" column="cat_image" jdbcType="VARCHAR"/>
        <result property="bgColor" column="bg_color" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, name, type, father_id, logo, slogan, cat_image, bg_color
        from  category
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, name, type, father_id, logo, slogan, cat_image, bg_color
        from  category
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, name, type, father_id, logo, slogan, cat_image, bg_color
        from  category
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="fatherId != null">
                and father_id = #{fatherId}
            </if>
            <if test="logo != null and logo != ''">
                and logo = #{logo}
            </if>
            <if test="slogan != null and slogan != ''">
                and slogan = #{slogan}
            </if>
            <if test="catImage != null and catImage != ''">
                and cat_image = #{catImage}
            </if>
            <if test="bgColor != null and bgColor != ''">
                and bg_color = #{bgColor}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into  category(name, type, father_id, logo, slogan, cat_image, bg_color)
        values (#{name}, #{type}, #{fatherId}, #{logo}, #{slogan}, #{catImage}, #{bgColor})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update  category
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="fatherId != null">
                father_id = #{fatherId},
            </if>
            <if test="logo != null and logo != ''">
                logo = #{logo},
            </if>
            <if test="slogan != null and slogan != ''">
                slogan = #{slogan},
            </if>
            <if test="catImage != null and catImage != ''">
                cat_image = #{catImage},
            </if>
            <if test="bgColor != null and bgColor != ''">
                bg_color = #{bgColor},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from  category where id = #{id}
    </delete>

</mapper>